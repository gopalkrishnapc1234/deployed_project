<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
<body class="bg-light">
  <%- include('partials/navbar') %>
<!-- Hero -->
  <header class="hero">
  <div class="container text-center">
    <h1 class="display-4 fw-bold">Smart Hiring for Smart Teams</h1>
    <p class="lead">Your trusted HR consultancy partner</p>

    <% if (!currentUser) { %>
      <a href="/register" class="btn btn-primary me-2">Get Started</a>
      <a href="/user/jobs" class="btn btn-outline-secondary">Browse Jobs</a>
    <% } else { %>
      <div class="d-flex justify-content-center gap-2 mt-3">
        <% if (currentUser.role === 'user') { %>
          <a href="/user/dashboard" class="btn btn-primary">Go to Dashboard</a>
          <a href="/user/jobs" class="btn btn-outline-secondary">Browse Jobs</a>
        <% } else { %>
          <a href="/admin" class="btn btn-warning">Open Admin Panel</a>
        <% } %>
      </div>
    <% } %>
  </div>
</header>


  <!-- Services -->
  <section id="services" class="section">
    <div class="container">
      <h2 class="text-center mb-4">Our Services</h2>
      <div class="row g-4 justify-content-center">
        <div class="col-md-6 col-lg-4">
          <div class="card p-3 text-center">
            <h4>Talent Acquisition</h4>
            <p>We help you find the right candidates quickly and efficiently.</p>
          </div>
        </div>
        <div class="col-md-6 col-lg-4">
          <div class="card p-3 text-center">
            <h4>HR Consulting</h4>
            <p>Expert HR strategies to streamline your business operations.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process -->
    <section id="process" class="section"> 
        <div class="container"> 
          <h2 class="text-center mb-4">Our Process</h2>
           <div class="row text-center g-4"> 
            <div class="col-6 col-md-3">
              <h4>1. Connect</h4>
                 <p>We understand your requirements.</p></div> 
                   <div class="col-6 col-md-3">
                     <h4>2. Screen</h4>
                       <p>Shortlisting top candidates.</p>
            </div> 
            <div class="col-6 col-md-3">
               <h4>3. Interview</h4>
                 <p>Facilitating client-candidate meetings.</p>
            </div>
                   <div class="col-6 col-md-3">
                     <h4>4. Hire</h4>
                        <p>Onboarding the right fit.</p>
                    </div> 
          </div>
         </div> 
    </section>
  <!-- Business Enquiry -->
  <section id="contact" class="section">
  <div class="container">
    <h2 class="text-center mb-4">Business Enquiry</h2>
    <form class="row g-3" action="/sendQuery" method="POST">
      <div class="col-md-6">
        <input type="text" class="form-control" name="name" placeholder="Your Name" required>
      </div>
      <div class="col-md-6">
        <input type="email" class="form-control" name="email" placeholder="Your Email" required>
      </div>
      <div class="col-12">
        <textarea class="form-control" name="message" rows="4" placeholder="Your Message" required></textarea>
      </div>
      <div class="col-12 text-center">
        <button type="submit" class="btn btn-primary">Send Message</button>
      </div>
    </form>
  </div>
</section>


